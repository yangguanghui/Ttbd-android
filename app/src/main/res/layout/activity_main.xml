<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.example.ygh.ttbd.ViewModel.VersionData"/>

        <variable
            name="versionData"
            type="VersionData"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ygh.ttbd.main.MainActivity">

        <TextView
            android:id="@+id/hello"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{`hello world` + versionData.url}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintHorizontal_bias="0.12"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="121dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/tvVerCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="19dp"
            android:text="@{``+versionData.ver_code}"
            app:layout_constraintLeft_toLeftOf="@+id/tvId"
            app:layout_constraintTop_toBottomOf="@+id/tvId"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"/>

        <TextView
            android:id="@+id/tvVerName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@{versionData.ver_name}"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="110dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:text="@{versionData.url}"
            app:layout_constraintLeft_toLeftOf="@+id/tvVerName"
            app:layout_constraintRight_toRightOf="@+id/tvVerName"
            app:layout_constraintTop_toBottomOf="@+id/tvVerName"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="90dp"
            android:text="@{``+versionData.id}"
            app:layout_constraintRight_toRightOf="@+id/tvVerName"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    </android.support.constraint.ConstraintLayout>
</layout>